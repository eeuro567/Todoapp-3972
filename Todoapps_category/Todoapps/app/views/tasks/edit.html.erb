<% content_for :title, "Editing Task" %>

<div class="container mt-4">
  <h1 class="text-center mb-4">Editing Task</h1>

  <div class="card">
    <div class="card-body">
      <%= render "form", task: @task %>
    </div>
  </div>

  <br>

  <div class="text-center">
    <%= link_to "Show this task", @task, class: "btn btn-info" %>
    <%= link_to "Back to tasks", tasks_path, class: "btn btn-secondary" %>
  </div>
</div>
